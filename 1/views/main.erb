<article>
<section>
<p>Post Thread!</p>
<form action="/create_thread" method="POST" enctype="multipart/form-data">
<div><label>name :<input type="text" name="name" required/></label></div>
<div><label>title:<input type="text" name="title" required/></label></div>
<div><lable><input type="file" name="file" accept="image/*" /></label></div>
<input type="hidden" name="post_username" value="<%= @user %>">
<textarea cols="30" rows="5" wrap="hard" name="text" placeholder="Please input comment!!!" required></textarea><br>
<button type="submit">Post</button>
</form>
</section>
<section>
  <% @pagination.each do |page| %>
    <a href="/page/<%= page %>"><%= page %></a>
  <% end %>
  <hr>
  <% @threads.each do |thread| %>
  <div>
    <div>
    <%= thread[:thread_id] %>
    <span id="title_<%= thread[:thread_id] %>"><%= thread[:title] %></span>
    <% if  @user.eql? thread[:post_username] %>
      <a href="javascript:void(0)" onClick="openWindow(<%= thread[:thread_id] %>)">edit</a>
      <a href="javascript:void(0)" onClick="deleteThread(<%= thread[:thread_id] %>)">delete</a>
    <% end %>
    </div>
    <div>
    <span id="name_<%= thread[:thread_id] %>"><%= thread[:name] %></span>
    <span id="write_date_<%= thread[:thread_id] %>"><%= thread[:write_date] %></span>
    </div>
    <div>
      <p id="text_<%= thread[:thread_id] %>"><%= thread[:text] %></p>
    </div>
  </div>
  <hr>
  <% end %>
</section>
